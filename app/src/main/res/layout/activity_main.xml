<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_width="wrap_content"
            android:text="مهدی نعمتی"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_alarm"
            app:tint="#525252" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_setting"
            app:tint="#525252" />

        <TextView
            android:id="@+id/textView2"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:text="09381980312"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_height="70dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:layout_width="70dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/img_hesabkarbari" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_width="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/img_digikelab" />

        <TextView
            android:id="@+id/textView3"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:text="فعالسازی دیجیکلاب"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:text="0 تومان"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <View
            android:background="#656565"
            android:id="@+id/view"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:layout_width="1dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:background="#BDBDBD"
            android:id="@+id/view3"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:layout_width="1dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <View
            android:background="#DADADA"
            android:id="@+id/view2"
            android:layout_height="10dp"
            android:layout_marginTop="64dp"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/textView5"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:text="سفارش های من"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layoutDirection="rtl"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="0dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="70dp"
                        android:layout_width="70dp"
                        android:src="@drawable/img_pardakht" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:text="در انتظار پرداخت" />

                </LinearLayout>

                <View
                    android:background="#BDBDBD"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="1dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="70dp"
                        android:layout_width="70dp"
                        android:src="@drawable/img_pardazesh" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:text="در حال پردازش" />

                </LinearLayout>

                <View
                    android:background="#BDBDBD"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="1dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="70dp"
                        android:layout_width="70dp"
                        android:src="@drawable/img_tahvilshode" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:text="تحویل شده" />

                </LinearLayout>

                <View
                    android:background="#BDBDBD"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="1dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="70dp"
                        android:layout_width="70dp"
                        android:src="@drawable/img_laghvshode" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:text="لغو شده" />

                </LinearLayout>

                <View
                    android:background="#BDBDBD"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="1dp" />

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="70dp"
                        android:layout_width="70dp"
                        android:src="@drawable/img_marjooshode" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:text="مرجوع شده" />

                </LinearLayout>

                <View
                    android:background="#7F7F7F"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="1dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

            <FrameLayout
                android:layout_height="50dp"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_heart"
                    app:tint="#3B3B3B" />

                <TextView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="64dp"
                    android:layout_width="wrap_content"
                    android:text="لیست مورد علاقه"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_width="20dp"
                    android:src="@drawable/ic_arrow" />


            </FrameLayout>

            <View
                android:background="#AEAEAE"
                android:layout_height="2dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent" />

            <FrameLayout
                android:layout_height="50dp"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_payam"
                    app:tint="#3B3B3B" />

                <TextView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="64dp"
                    android:layout_width="wrap_content"
                    android:text="نقد و نظرات"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_width="20dp"
                    android:src="@drawable/ic_arrow" />


            </FrameLayout>

            <View
                android:background="#AEAEAE"
                android:layout_height="2dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent" />

            <FrameLayout
                android:layout_height="50dp"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_naghshe"
                    app:tint="#3B3B3B" />

                <TextView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="64dp"
                    android:layout_width="wrap_content"
                    android:text="آدرس ها"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_width="20dp"
                    android:src="@drawable/ic_arrow" />


            </FrameLayout>

            <View
                android:background="#AEAEAE"
                android:layout_height="2dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent" />

            <FrameLayout
                android:layout_height="50dp"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_kartbanki"
                    app:tint="#3B3B3B" />

                <TextView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="64dp"
                    android:layout_width="wrap_content"
                    android:text="کارت های هدیه"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_width="20dp"
                    android:src="@drawable/ic_arrow" />


            </FrameLayout>

            <View
                android:background="#AEAEAE"
                android:layout_height="2dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent" />

            <FrameLayout
                android:layout_height="50dp"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_profile"
                    app:tint="#3B3B3B" />

                <TextView
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="64dp"
                    android:layout_width="wrap_content"
                    android:text="اطلاعات حساب کاربری"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_width="20dp"
                    android:src="@drawable/ic_arrow" />


            </FrameLayout>

            <View
                android:background="#AEAEAE"
                android:layout_height="2dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

